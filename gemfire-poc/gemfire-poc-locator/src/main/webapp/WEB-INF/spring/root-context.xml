<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-override location="classpath:/gemfire-poc.properties" ignore-resource-not-found="true"/>

    <!-- create a unique directory base directory for this node -->
    <bean id="findDiskDir" class="demo.vmware.gemfire.util.PersistenceDirectoryGenerator" destroy-method="unlock" init-method="findDirectory">
        <property name="parent" value="/tmp/locator" />
    </bean>

    <bean id="locator" class="demo.vmware.gemfire.locator.LocatorBean" init-method="startLocator" destroy-method="stopLocator">
        <property name="stateFile" value="#{findDiskDir.getSelected()}/locator.state" />
        <property name="logFile" value="#{findDiskDir.getSelected()}/locator.log" />
    </bean>

</beans>