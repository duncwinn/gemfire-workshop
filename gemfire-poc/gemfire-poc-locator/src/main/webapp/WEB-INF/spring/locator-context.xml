<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- create a unique directory base directory for this node -->
	<bean id="findDiskDir" class="demo.vmware.gemfire.util.PersistenceDirectoryGenerator"
		destroy-method="unlock" init-method="findDirectory" p:parent="/tmp/locator" />

	<bean id="locator" class="demo.vmware.gemfire.locator.LocatorBean"
		init-method="startLocator" destroy-method="stopLocator"
		p:stateFile="#{findDiskDir.getSelected()}/locator.state" p:logFile="#{findDiskDir.getSelected()}/locator.log" />
</beans>